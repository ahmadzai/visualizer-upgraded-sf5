<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Block title -->
    <title>{% block title %}Welcome to PolioDB!{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% block css %}
        <link href="{{ asset('build/layout.css') }}" rel="stylesheet" type="text/css" />
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    {% block js_head %}
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114992079-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-114992079-1');
        </script>

    {% endblock %}
</head>
<body class="hold-transition skin-blue sidebar-mini fixed">
<div class="wrapper" data-state="{}" id="filter-state">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="{{ path('home') }}" class="logo" title="PolioDB">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>P</b>DB</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>POLIO</b>DB</span>
        </a>

        <!-- Header Navbar -->
        {% block header %}
            {% include 'shared/header.html.twig' %}
        {% endblock %}
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- search form (Optional) -->
            {% block searchform %}
                {% include 'shared/searchform.html.twig' %}
            {%  endblock %}

            <!-- /.search form -->

            <!-- Sidebar Menu -->
            {% block mainmenu %}
                {% include 'shared/mainmenu.html.twig' %}
            {% endblock %}

            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {% block breadcrumb %}
                {% include 'shared/breadcrumb.html.twig' %}
            {% endblock %}
        </section>

        <!-- Main content -->
        <section class="content container-fluid">

            <!--------------------------
              | Your Page Content Here |
              -------------------------->
            {% block content %}

            {% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        {% block footer %}
        {% include 'shared/footer.html.twig' %}
        {% endblock %}
    </footer>

    {% block sidebar_control %}
        {% if is_granted('ROLE_EDITOR') %}
            {% include 'shared/sidebar-control.html.twig' %}
        {% endif %}
    {% endblock %}

</div>
<!-- ./wrapper -->

{% block js %}
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/layout.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% endblock %}
</body>
</html>