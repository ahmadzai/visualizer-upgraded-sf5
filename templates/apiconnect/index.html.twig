{% extends 'template.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">External API Services</h3>
                    <a href="{{ path("apiconnect_new") }}" class="btn btn-sm btn-info pull-right">
                        <i class="fa fa-plus"></i> New Service
                    </a>
                </div>
                <div class="box-body">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <i class="icon fa fa-check"></i>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <table id="api-services" class="table table-bordered table-striped dash-dataTable"
                           data-setting="{% if tableSetting is defined %}{{ tableSetting }}{% endif %}">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Service Name</th>
                            <th>User Name</th>
                            <th>Updated At</th>
                            <th>Added By</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for service in apiConnects %}
                            <tr>

                                <td><a href="{{ path('apiconnect_show', { 'id': service.id }) }}">{{ service.id }}</a></td>
                                <td>{{ service.apiServiceName }}</td>
                                <td>
                                    {{ service.apiUser }}
                                </td>
                                <td>{{ service.updatedAt|date }}</td>
                                <td>{{ service.user.username }}</td>
                                <td>

                                    <a class="btn btn-xs btn-info" href="{{ path('apiconnect_show', { 'id': service.id }) }}">show</a>

                                    <a class="btn btn-xs btn-warning" href="{{ path('apiconnect_edit', { 'id': service.id }) }}">edit</a>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    <h1>
        List
        <small> of APIs</small>
    </h1>
    <ol class="breadcrumb">

        <li>
            <a href="{{ path("home") }}">
                <i class="fa fa-home"></i>
                Home
            </a>
        </li>

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ app.user.username }} |

            <li>
                <a href="{{ path('app_logout') }}">
                    <i class="fa fa-sign-out"></i>
                    Logout
                </a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('app_login') }}">
                    <i class="fa fa-sign-in"></i>
                    Login
                </a>
            </li>

        {% endif %}

    </ol>
{% endblock %}