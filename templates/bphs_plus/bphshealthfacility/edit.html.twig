{% extends 'control-template.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Updating facility!</h3>
                </div>

                {{ form_start(edit_form) }}
                <div class="box-body">

                    {% block form_errors %}
                        {% if not edit_form.vars.valid %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <h4><i class="icon fa fa-ban"></i> Form Errors!</h4>

                                <ul>
                                    {#Loop through every edit_form item#}
                                    {% for child in edit_form.children %}
                                        {#Display the errors of the edit_form item#}
                                        {%for error in child.vars.errors%}
                                            <li>{{ child.vars.label }}: {{error.message}}</li>
                                        {%endfor%}
                                    {%endfor%}
                                </ul>
                                {#{{ form_errors(edit_form) }}#}

                            </div>
                        {% endif %}
                    {% endblock form_errors %}

                    <div class="row">
                        <div class="col-md-9">

                            <div class="form-group {{ form_errors(edit_form.province)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(edit_form.province) }}
                                {{ form_widget(edit_form.province, {'attr':{'tabindex':1}}) }}
                            </div>


                            <div class="form-group {{ form_errors(edit_form.district)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(edit_form.district) }}
                                {{ form_widget(edit_form.district, {'attr':{'tabindex':2}}) }}
                            </div>


                            <div class="form-group {{ form_errors(edit_form.id)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(edit_form.id) }}
                                {{ form_widget(edit_form.id, {'attr':{'tabindex':3}}) }}
                            </div>


                            <div class="form-group {{ form_errors(edit_form.facilityName)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(edit_form.facilityName) }}
                                {{ form_widget(edit_form.facilityName, {'attr':{'tabindex':4}}) }}
                            </div>

                            <!-- /.edit_form-group -->
                        </div>

                    </div>
                    {#{% endblock form_row %}#}
                    <div class="row">
                        <div class="col-md-9">
                            <input type="submit" tabindex="13" class="btn btn-info" value="Create" />
                            <a href="{{ path('bphs_hf_index') }}" class="btn btn-default">
                                <i class="fa fa-mail-reply"></i> Go Back!
                            </a>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                {{ form_end(edit_form) }}
                <div class="row box-body">
                    <div class="col-md-6">
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    {{ include('bphs_plus/bphshealthfacility/_ajax_request.html.twig') }}
{% endblock %}
