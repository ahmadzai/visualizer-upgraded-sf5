{% extends 'template.html.twig' %}

{% block content %}
    <div class="row">

        <div class="col-md-6">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-aqua-active">
                    <!-- /.widget-user-image -->
                    <h3 class="widget-user-username">{{ bphsHealthFacility.facilityName }}</h3>
                    <h5 class="widget-user-desc">CODE: {{ bphsHealthFacility.id }}</h5>
                    <h5 class="widget-user-desc">
                        Province: {{ bphsHealthFacility.district.province.provinceName }},
                        District: {{ bphsHealthFacility.district.districtName }}
                    </h5>
                </div>
                <div class="box-footer no-padding">
                    <ul class="nav nav-stacked">
                        <li><a href="#">Record Created By <span class="pull-right badge">{{ bphsHealthFacility.createdBy.fullName }}</span></a></li>
                        <li><a href="#">Record Created At <span class="pull-right badge ">{{ bphsHealthFacility.createdAt|date('d/M/Y H:i:s') }}</span></a></li>
                    </ul>
                </div>
            </div>
            <!-- /.widget-user -->
        </div>
    </div>

    <div>

        <a href="{{ path('bphs_hf_index') }}" class="btn btn-primary"><i class="fa fa-reply"></i> Back</a>


        <a href="{{ path('bphs_hf_edit', { 'id': bphsHealthFacility.id }) }}" class="btn btn-info">Edit</a>

    </div>
    <br>
    <div>
        {{ form_start(delete_form) }}
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="fa fa-trash"></i> Delete
        </button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
