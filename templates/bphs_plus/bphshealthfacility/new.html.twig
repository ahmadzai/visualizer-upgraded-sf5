{% extends 'control-template.html.twig' %}

{% block content %}
    <h1>Bphshealthfacility creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('bphs_hf_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script>
        var $province = $('#bphshealthfacility_province');
        //When table gets selected ...
        $province.change(function() {
            // ... retrieve the corresponding form.
            var $form = $(this).closest('form');
            // Simulate form data, but only include the selected sport value.
            var data = {};
            data[$province.attr('name')] = $province.val();
            // Submit data via AJAX to the form's action path.
            $.ajax({
                url : $form.attr('action'),
                type: $form.attr('method'),
                data : data,
                success: function(html) {
                    // Replace current position field ...
                    $('#bphshealthfacility_district').html($(html).find('#bphshealthfacility_district').html());

                }
            });
        });

    </script>
{% endblock %}
