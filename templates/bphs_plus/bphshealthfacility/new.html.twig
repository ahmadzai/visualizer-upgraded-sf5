{% extends 'control-template.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add a new facility!</h3>
                </div>

                {{ form_start(form) }}
                <div class="box-body">

                    {% block form_errors %}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <h4><i class="icon fa fa-ban"></i> Form Errors!</h4>

                                <ul>
                                    {#Loop through every form item#}
                                    {% for child in form.children %}
                                        {#Display the errors of the form item#}
                                        {%for error in child.vars.errors%}
                                            <li>{{ child.vars.label }}: {{error.message}}</li>
                                        {%endfor%}
                                    {%endfor%}
                                </ul>
                                {#{{ form_errors(form) }}#}

                            </div>
                        {% endif %}
                    {% endblock form_errors %}

                    <div class="row">
                        <div class="col-md-9">

                            <div class="form-group {{ form_errors(form.province)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(form.province) }}
                                {{ form_widget(form.province, {'attr':{'tabindex':1}}) }}
                            </div>


                            <div class="form-group {{ form_errors(form.district)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(form.district) }}
                                {{ form_widget(form.district, {'attr':{'tabindex':2}}) }}
                            </div>


                            <div class="form-group {{ form_errors(form.id)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(form.id) }}
                                {{ form_widget(form.id, {'attr':{'tabindex':3}}) }}
                            </div>


                            <div class="form-group {{ form_errors(form.facilityName)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(form.facilityName) }}
                                {{ form_widget(form.facilityName, {'attr':{'tabindex':4}}) }}
                            </div>

                            <div class="form-group {{ form_errors(form.facilityType)|length > 0 ? 'has-error' : '' }}">
                                {{ form_label(form.facilityType) }}
                                {{ form_widget(form.facilityType, {'attr':{'tabindex':5}}) }}
                            </div>

                            <!-- /.form-group -->
                        </div>

                    </div>
                    {#{% endblock form_row %}#}
                    <div class="row">
                        <div class="col-md-9">
                            <input type="submit" tabindex="6" class="btn btn-info" value="Create" />
                            <a href="{{ path('bphs_hf_index') }}" class="btn btn-default">
                                <i class="fa fa-mail-reply"></i> Go Back!
                            </a>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    {{ include('bphs_plus/bphshealthfacility/_ajax_request.html.twig') }}
{% endblock %}
