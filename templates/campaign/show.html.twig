{% extends 'template.html.twig' %}

{% block content %}
    <div class="row">

        <div class="col-md-6">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-aqua-active">
                    <!-- /.widget-user-image -->
                    <h3 class="widget-user-username">Campaign: {{ campaign.campaignName }}</h3>
                    <h5 class="widget-user-desc">Type: {{ campaign.campaignType }}</h5>
                    <h5 class="widget-user-desc">CODE: {{ campaign.id }}</h5>
                </div>
                <div class="box-footer no-padding">
                    <ul class="nav nav-stacked">
                        <li><a href="#">Start Date <span class="pull-right badge">{{ campaign.campaignStartDate }}</span></a></li>
                        <li><a href="#">End Date <span class="pull-right badge ">{{ campaign.campaignEndDate }}</span></a></li>
                        <li><a href="#">Month  <span class="pull-right badge ">{{ campaign.campaignMonth }}</span></a></li>
                        <li><a href="#">Year <span class="pull-right badge ">{{ campaign.campaignYear }}</span></a></li>
                    </ul>
                </div>
            </div>
            <!-- /.widget-user -->
        </div>
    </div>

    <div>

        <a href="{{ path('campaign_index') }}" class="btn btn-primary"><i class="fa fa-reply"></i> Back</a>


        <a href="{{ path('campaign_edit', { 'id': campaign.id }) }}" class="btn btn-info">Edit</a>

    </div>
    <br>
    <div>
        {{ form_start(delete_form) }}
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="fa fa-trash"></i> Delete
        </button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
