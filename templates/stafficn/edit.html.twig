{% extends 'template.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Updating/Editing   Staff!</h3>
                </div>

                {{ form_start(edit_form) }}
                <div class="box-body">

                    {% block form_errors %}
                        {% if not edit_form.vars.valid %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <h4><i class="icon fa fa-ban"></i> edit_form Errors!</h4>

                                <ul>
                                    {#Loop through every edit_form item#}
                                    {% for child in edit_form.children %}
                                        {#Display the errors of the edit_form item#}
                                        {%for error in child.vars.errors%}
                                            <li>{{ child.vars.label }}: {{error.message}}</li>
                                        {%endfor%}
                                    {%endfor%}
                                </ul>
                                {#{{ form_errors(edit_form) }}#}

                            </div>
                        {% endif %}
                    {% endblock form_errors %}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row no-margin no-padding">
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.district)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.district) }}
                                    {{ form_widget(edit_form.district, {'attr':{'tabindex':1}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfDco)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfDco) }}
                                    {{ form_widget(edit_form.noOfDco, {'attr':{'tabindex':2}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfFemaleDco)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfFemaleDco) }}
                                    {{ form_widget(edit_form.noOfFemaleDco, {'attr':{'tabindex':3}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfCcs)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfCcs) }}
                                    {{ form_widget(edit_form.noOfCcs, {'attr':{'tabindex':4}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfFemaleCcs)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfFemaleCcs) }}
                                    {{ form_widget(edit_form.noOfFemaleCcs,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfSm)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfSm) }}
                                    {{ form_widget(edit_form.noOfSm,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                            </div>
                            <div class="row no-padding no-margin">
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfFemaleSm)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfFemaleSm) }}
                                    {{ form_widget(edit_form.noOfFemaleSm,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfFmv)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfFmv) }}
                                    {{ form_widget(edit_form.noOfFmv,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfExt)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfExt) }}
                                    {{ form_widget(edit_form.noOfExt,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.noOfFemaleExt)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.noOfFemaleExt) }}
                                    {{ form_widget(edit_form.noOfFemaleExt,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.asOfMonth)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.asOfMonth) }}
                                    {{ form_widget(edit_form.asOfMonth,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                                <div class="col-md-2 edit_form-group {{ form_errors(edit_form.asOfYear)|length > 0 ? 'has-error' : '' }}">
                                    {{ form_label(edit_form.asOfYear) }}
                                    {{ form_widget(edit_form.asOfYear,{'attr':{'tabindex':5, 'style':'width:100%'}}) }}
                                </div>
                            </div>
                            <br>
                            <div class="row no-margin no-padding">
                                <div class="col-md-4">
                                    <input type="submit" tabindex="13" class="btn btn-info" value="Update" />
                                    <a href="{{ path('staff-icn_index') }}" class="btn btn-default">
                                        <i class="fa fa-mail-reply"></i> Go Back!
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.row -->
                </div>
                {{ form_end(edit_form) }}
                
                <div class="row box-body">
                    <div class="col-md-6">
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}